{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "es2024",
        "lib": [
            "es2024"
        ],
        "module": "nodenext",
        "declaration": true,
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "strict": true,
        "newLine": "lf",
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "incremental": true,
        "tsBuildInfoFile": ".tsbuildinfo"
    },
    "include": [
        "src/**/*.ts",
        "scripts/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
